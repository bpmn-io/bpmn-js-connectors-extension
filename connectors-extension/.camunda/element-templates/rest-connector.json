[
  {
    "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
    "name": "REST Task",
    "id": "io.camunda.connectors.RestConnector-s1",
    "description": "Invoke a REST API and retrieve the result",
    "appliesTo": [
      "bpmn:ServiceTask"
    ],
    "groups": [
      {
        "id": "endpoint-configuration",
        "label": "REST endpoint"
      },
      {
        "id": "authentication",
        "label": "Authentication"
      },
      {
        "id": "input",
        "label": "Payload"
      },
      {
        "id": "output",
        "label": "Response mapping"
      }
    ],
    "properties": [
      {
        "type": "Hidden",
        "value": "http",
        "binding": {
          "type": "zeebe:taskDefinition:type"
        }
      },
      {
        "label": "URL",
        "group": "endpoint-configuration",
        "type": "String",
        "binding": {
          "type": "zeebe:taskHeader",
          "key": "url"
        },
        "constraints": {
          "notEmpty": true,
          "pattern": {
            "value": "^https?://.*",
            "message": "Must be http(s) URL."
          }
        }
      },
      {
        "label": "Method",
        "group": "endpoint-configuration",
        "type": "Dropdown",
        "value": "get",
        "choices": [
          { "name": "GET", "value": "get" },
          { "name": "POST", "value": "post" },
          { "name": "PATCH", "value": "patch" },
          { "name": "DELETE", "value": "delete" }
        ],
        "binding": {
          "type": "zeebe:taskHeader",
          "key": "method"
        }
      },
      {
        "label": "Username",
        "group": "authentication",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "USER_NAME"
        },
        "optional": true
      },
      {
        "label": "Password",
        "group": "authentication",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "PASSWORD"
        },
        "optional": true
      },
      {
        "label": "Request Body",
        "description": "JSON payload to send with the request",
        "group": "input",
        "value": "",
        "type": "Text",
        "binding": {
          "type": "zeebe:input",
          "name": "body"
        },
        "optional": true
      },
      {
        "label": "Result Variable",
        "description": "Name of variable to store the response body in",
        "group": "output",
        "value": "response",
        "type": "String",
        "binding": {
          "type": "zeebe:output",
          "source": "= body"
        },
        "optional": true
      }
    ]
  }
]
