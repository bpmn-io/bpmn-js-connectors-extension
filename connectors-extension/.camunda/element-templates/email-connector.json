[
  {
    "name": "Email Task",
    "id": "io.camunda.connectors.EmailConnector-s2",
    "description": "Send an email via SMTP",
    "appliesTo": [
      "bpmn:ServiceTask"
    ],
    "groups": [
      {
        "id": "endpoint-configuration",
        "label": "SMTP server"
      },
      {
        "id": "input",
        "label": "Email"
      },
      {
        "id": "output",
        "label": "Output"
      }
    ],
    "properties": [
      {
        "type": "Hidden",
        "value": "send-email",
        "binding": {
          "type": "zeebe:taskDefinition:type"
        }
      },
      {
        "label": "Hostname",
        "group": "endpoint-configuration",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "HOST_NAME"
        },
        "constraints": {
          "notEmpty": true
        }
      },
      {
        "label": "Port",
        "group": "endpoint-configuration",
        "type": "String",
        "value": "= 25",
        "binding": {
          "type": "zeebe:input",
          "name": "PORT"
        },
        "constraints": {
          "optional": true
        }
      },
      {
        "label": "Username",
        "group": "endpoint-configuration",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "USER_NAME"
        },
        "constraints": {
          "optional": true
        }
      },
      {
        "label": "Password",
        "group": "endpoint-configuration",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "PASSWORD"
        },
        "constraints": {
          "optional": true
        }
      },
      {
        "label": "Sender",
        "group": "input",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "sender"
        },
        "constraints": {
          "notEmpty": true
        }
      },
      {
        "label": "Recipient",
        "group": "input",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "recipient"
        },
        "constraints": {
          "notEmpty": true
        }
      },
      {
        "label": "Subject",
        "group": "input",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "subject"
        },
        "constraints": {
          "notEmpty": true
        }
      },
      {
        "label": "Body",
        "group": "input",
        "type": "Text",
        "binding": {
          "type": "zeebe:input",
          "name": "message"
        },
        "constraints": {
          "notEmpty": true
        }
      }
    ]
  }
]
